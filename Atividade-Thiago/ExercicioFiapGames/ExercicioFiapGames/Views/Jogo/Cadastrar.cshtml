@model Jogo
@{
    ViewData["Title"] = "Cadastrar";
}

<h2>Cadastrar</h2>

<mensagem texto="@TempData["mensagem"]"></mensagem>

<form asp-action="Cadastrar" class="form-group">
    <div>
        <label asp-for="Nome">Nome: </label>
        <input asp-for="Nome" placeholder="Digite o nome do Jogo" class="form-control" style="border:2px solid black" />
    </div>
    <div>
        <label asp-for="DataLancamento">Data Lancamento: </label>
        <input asp-for="DataLancamento" placeholder="Digite a Data do Lancamento" class="form-control" style="border:2px solid black" />
    </div>
    <div>
        <label asp-for="DataLancamento">Nome: </label>
        <input asp-for="DataLancamento" class="form-control" style="border:2px solid black" />
    </div>
    <br/>
    <div>
        <label asp-for="plataforma">Plataforma: </label>
        <select asp-items="@Html.GetEnumSelectList<Plataforma>()" style="border:3px solid black">
        <option>Selecione a plataforma</option></select>
    </div>
    <input type="submit" value="Cadastrar" class="btn btn-primary"/>

</form>